# Environment Variables Example
# Copy this file to .env for local development
# DO NOT commit .env to GitHub!

# Database Connection (Full connection string)
DATABASE_URL=postgresql://username:password@host:5432/database?ssl=true

# Azure PostgreSQL (Auto-populated in Azure App Service)
AZURE_POSTGRESQL_HOST=your-server.postgres.database.azure.com
AZURE_POSTGRESQL_USER=your-username
AZURE_POSTGRESQL_PASSWORD=your-password
AZURE_POSTGRESQL_DATABASE=your-database
AZURE_POSTGRESQL_PORT=5432

# Server Configuration
NODE_ENV=production
PORT=8080

# Optional: SSL Configuration
AZURE_POSTGRESQL_SSL=true